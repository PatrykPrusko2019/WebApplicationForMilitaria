@using AspNetCoreHero.ToastNotification.Abstractions
@using Newtonsoft.Json

@{
    var currentUrl = ViewContext.RouteData.Values["Action"]?.ToString();
    var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
     var notification = TempData["Notification"] != null
       ? (Notification)JsonConvert.DeserializeObject<Notification>(TempData["Notification"]!.ToString()!)!
       : null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplicationForMilitaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplicationForMilitaria.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApplicationForMilitaria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "Home" && currentUrl == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                         <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "Order" && currentUrl == "Index" ? "active" : "")" asp-area="" asp-controller="Order" asp-action="Index">Order</a>
                        </li
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "FirstProviderFileOne" && currentUrl == "Index" ? "active" : "")" asp-area="" asp-controller="FirstProviderFileOne" asp-action="Index">FirstProviderFileOne</a>
                        </li
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "FirstProviderFileTwo" && currentUrl == "Index" ? "active" : "")" asp-area="" asp-controller="FirstProviderFileTwo" asp-action="Index">FirstProviderFileTwo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "SecondProviderFileOne" && currentUrl == "Index" ? "active" : "")" asp-area="" asp-controller="SecondProviderFileOne" asp-action="Index">SecondProviderFileOne</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "SecondProviderFileTwo" && currentUrl == "Index" ? "active" : "")" asp-area="" asp-controller="SecondProviderFileTwo" asp-action="Index">SecondProviderFileTwo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "ThirdProviderFileOne" && currentUrl == "Index" ? "active" : "")" asp-area="" asp-controller="ThirdProviderFileOne" asp-action="Index">ThirdProviderFileOne</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "APIAllegro" && currentUrl == "Index" ? "active" : "")" asp-area="" asp-controller="APIAllegro" asp-action="Index">APIAllegroFiles</a>
                        </li>


                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebApplicationForMilitaria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @if(notification != null)
    {
        <script>
            toastr["@notification.Type"]("@notification.Message")
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
