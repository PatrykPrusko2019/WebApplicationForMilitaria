@model IEnumerable<WebApplicationForMilitaria.Application.FirstProviderFileOne.ProductOneDto>

@{
    ViewData["Title"] = "Index";
}

<h1>List Of FirstProviderFileOne</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id) XMLFile
            </th>
            <th>
