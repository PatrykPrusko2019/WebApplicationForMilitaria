            </th>
            <th>
                @Html.DisplayNameFor(model => model.Srp.Gross) Srp
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Srp.Net) Srp
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Srp.Vat) Srp
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price.Gross)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price.Net)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price.Vat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Srp.Gross)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Srp.Net)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Srp.Vat)
            </td>
            <td>
                    <a class="btn btn-outline-secondary" asp-controller="FirstProviderFileOne" asp-action="Details" asp-route-id="@item.ProductId">Details</a>


